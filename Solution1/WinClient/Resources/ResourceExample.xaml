<Window x:Class="WinClient.Resources.ResourceExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinClient.Resources"
        mc:Ignorable="d"
        Title="ResourceExample" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Background" Value="{DynamicResource GreenBackground}"/>
        </Style>

        <SolidColorBrush x:Key="GreenBackground" Color="Green"/>
    </Window.Resources>
    <Grid Background="{DynamicResource GreenBackground}">
        <Button/>
    </Grid>
</Window>
